@model List<MVCModelBasics.Model.Book>
<h1>Home</h1>

<strong>Total Books We have is : </strong> @Model.Count<br />

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td>
                    <img src="~/Images/@book.CoverImage" 
                                    width="150" 
                                    height="150" />
                </td>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td><a href="~/updatebook/@book.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>


